<tr>
	<td><%= line_item.quantity %> &times; </td>
	<td><%= line_item.product.title %></td>
	<td class="item_price"><%= number_to_currency(line_item.total_price, precision: 2,  separator: ".", delimiter:  " ") %></td>
	<td><%= button_to "X", line_item, method: :delete, data: {confirm: "Are you sure? ", redirect_to: store_path} %></td>
</tr>