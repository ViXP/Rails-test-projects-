%h1 Listing products
%table
  %thead
    %tr
      %th Title
      %th Description
      %th Image url
      %th Price
      %th Language
      %th{:colspan => "2"}
  %tbody
    - @products.each do |product|
      %tr
        %td= product.title
        %td= product.description
        %td
          %img{:border => "0", :src => product.image_url, :width => "100"}/
        %td= number_to_currency(local_price(product.price), precision: 2, delimiter: ".")
        %td= product.locale
        %td= link_to 'Show', product
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Product', new_product_path