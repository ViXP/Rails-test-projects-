.depot_form
  - if flash[:alert]
    %p#notice= flash[:alert]
  = form_tag do
    %fieldset
      %legend Login please
      %div
        = label_tag :name, 'Name: '
        = text_field_tag :name, params[:name]
      %div
        = label_tag :password, 'password: '
        = password_field_tag :password, params[:password]
      %div
        = submit_tag "Login"