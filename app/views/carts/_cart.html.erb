<h2><%= t('.your_cart_html') %></h2>
<table>
<%= render cart.line_items %>
<tr class="total_line">
	<td colspan="2"><%= t('.total_html') %></td>
	<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
</tr> 
</table>
<%= button_to t('.empty_cart_html'), cart, method: :delete, remote: true, data: {confirm: t('.you_sure_html')} %>
<% unless(controller_name == 'orders') %>
	<%= button_to t('.order_btn_html'), new_order_path, method: :get %>
<% end %>